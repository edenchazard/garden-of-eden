{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "test": "npm run db:migrate && npx vitest run",
    "test:watch": "npm run db:migrate && npx vitest",
    "ts:check": "nuxt prepare && vue-tsc -b --noEmit",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "fmt": "prettier --write .",
    "fmt:check": "prettier . --check",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "dev:docker": "docker compose up",
    "dev:docker:cleanup": "docker compose down --rmi all --remove-orphans",
    "dev:docker:cleanup:all": "docker compose down --rmi all --volumes --remove-orphans",
    "dev:docker:migrate": "docker compose exec hatchery bash -c 'npm run db:migrate'"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^7.2.0",
    "@fortawesome/free-solid-svg-icons": "^7.2.0",
    "@fortawesome/vue-fontawesome": "^3.1.3",
    "@nuxt/image": "^2.0.0",
    "@nuxtjs/color-mode": "^4.0.0",
    "@sidebase/nuxt-auth": "^1.2.0",
    "@vueuse/core": "^10.11.1",
    "bullmq": "^5.70.1",
    "chart.js": "^4.5.1",
    "chartjs-adapter-luxon": "^1.3.1",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "floating-vue": "^5.2.2",
    "luxon": "^3.7.2",
    "mysql2": "^3.18.2",
    "next-auth": "^4.21.1",
    "node-webpmux": "^3.2.1",
    "nuxt": "^4.2.2",
    "nuxt-security": "^2.5.1",
    "ofetch": "^1.5.1",
    "rss-parser": "^3.13.0",
    "sharp": "^0.33.5",
    "vue": "^3.5.28",
    "vue-chartjs": "^5.3.3",
    "vue3-toastify": "^0.2.8",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@nuxt/eslint": "^1.15.2",
    "@nuxt/test-utils": "^4.0.0",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/vite": "^4.2.1",
    "@types/luxon": "^3.7.1",
    "@vue/test-utils": "^2.4.6",
    "drizzle-kit": "^0.31.9",
    "esbuild": "^0.27.3",
    "happy-dom": "^20.7.0",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.1.12",
    "vitest": "^4.0.18",
    "vue-tsc": "^3.2.5"
  },
  "overrides": {
    "sharp": "$sharp"
  }
}
